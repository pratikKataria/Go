<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sen_reg</item>

        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Widget.Go.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ic_round_corner_rect</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
    </style>

    <style name="Widget.Go.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Go.TextView.Center" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/text_view_normal_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/mainFontColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.Go.Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Go.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="menu_fab_size">normal</item>
        <item name="menu_colorNormal">@color/colorPrimary</item>
        <item name="menu_colorPressed">@color/colorPrimary</item>
        <item name="menu_icon">@drawable/fab_add</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">#F2AB00</item>
    </style>
    
    <style name="Widget.Go.MaterialButton.BackDrop.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainFontColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
