<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginBundle.fragment.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sen_b"
            android:text="Login"
            android:textColor="@color/mainFontColor"
            android:textSize="@dimen/large_text_size" />
        <ImageView
            android:layout_width="@dimen/large_image_size"
            android:layout_height="@dimen/large_image_size"
            android:layout_gravity="center"
            android:src="@drawable/crayon_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Welcome back to login"
            style="@style/Widget.Go.TextView.Center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="create account using google account"
            style="@style/Widget.Go.TextView.Center" />

        <ImageButton
            android:id="@+id/fragment_login_ib_google"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:src="@drawable/ic_google"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <ProgressBar
            android:id="@+id/fragment_login_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Widget.Go.Progress"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_login_mb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Login"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/Widget.Go.Button"/>

        <TextView
            android:id="@+id/fragment_login_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            style="@style/Widget.Go.TextView.Center" />
    </LinearLayout>
</ScrollView>