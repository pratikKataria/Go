<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_ap_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="application id \u2022 "
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/card_view_ap_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name \u2022"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/card_view_gp_from"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="destinationsdfsdfsdfsdfsdfsdsdasdasdasdsadasdasdafsdfsdfsdfsdsdfsdfsadasdsdf" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_card_view_directions"/>

            <TextView
                android:id="@+id/card_view_gp_to"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="destinationsdfsdfsdfsdfsdfsdsdasdasdasdsadasdasdafsdfsdfsdfsdsdfsdfsadasdsdf" />

        </LinearLayout>

        <TextView
            android:id="@+id/card_view_gp_moderator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:fontFamily="@font/sen_b"
            android:text="approved by warden" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/card_view_gp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="12 : 12 pm" />
        <!--        \u2223-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_margin="12dp"
            android:text="\u2223"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="12/05/2020"
            android:layout_gravity="center"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.chip.Chip
                android:id="@+id/card_view_gp_chip_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textColor="@color/black"
                app:chipIcon="@drawable/ic_question"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                style="@style/Widget.MaterialComponents.Chip.Action"/>

            <TextView
                android:id="@+id/card_view_gp_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/ceriseRed"
                android:text="pending"/>
        </LinearLayout>


        <View
            android:layout_width="256dp"
            android:layout_height="2dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/horizontal_dashed_line"/>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>