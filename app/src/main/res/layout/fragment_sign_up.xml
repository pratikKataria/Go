<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginBundle.fragment.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sen_b"
            android:text="Signup"
            android:textColor="@color/mainFontColor"
            android:textSize="32sp" />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/crayon_signup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="create account using google account"
            android:layout_gravity="center"
            android:textColor="@color/mainFontColor" />

        <ImageButton
            android:id="@+id/test_image_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google_btn"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

    </LinearLayout>
</ScrollView>